type Query {
    gameById(id: ID): GameDTO,
    games: [GameDTO]
    studios: [StudioDTO]
}

type GameDTO {
    id: ID!
    title: String!
    type: String!
    platform: String!
    studio: StudioDTO!
    reviews: [ReviewDTO]!
    players: [PlayerDTO]
}

type ReviewDTO {
    id: ID!
    numberOfStars: Int!
    comment: String!
    game: GameDTO!
}

type PlayerDTO {
    id: ID!
    firstName: String!
    lastName: String!
}

type StudioDTO {
    id: ID!
    name: String!
    games: [GameDTO]!
}